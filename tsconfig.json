{
    "compilerOptions": {
        "jsx": "preserve",
        "lib": [
            "dom",
            "es2015"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "removeComments": false,
        "skipLibCheck": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "target": "es5"
    },
    "compileOnSave": false,
    "files":[
      "./source/code/typescript/index.ts"
    ],
    "include": [
        "./source/code/typescript/audiobus/index.ts",
        "./typings/*.ts"
    ],
    "exclude":[
        "node_modules",
        "**/*.spec.ts",
        "build",
        "dist",
        "release",
        "examples"
    ]
}
